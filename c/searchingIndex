#include <stdio.h>
int main(void){
        int a[5] = {0,1,2,3,4};
        int search = 4;
        int index = -1; // -1 if index not found
        for (int i=0; i<5; i++){
                if (a[i] == search){
                        index = i;
                }
        }
        if (index != -1){
                printf("The index of value %d is %d\n", search, index);
        }
        else {
                printf("%d is not present in the array\n", search);
        }
        return 0;
}
